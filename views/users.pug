extends layout

block content
    .container.mt-5
        h1(class="text-center mb-4") #{title}
        table(class="table table-striped table-hover text-center align-middle")
            thead(class="table-dark")
                tr
                    th(scope="col") #
                    th(scope="col") Name
                    th(scope="col") Date of Birth
                    th(scope="col") Actions
            tbody
                each student, index in students
                    tr
                        td #{index + 1}
                        td #{student.name}
                        td #{formatDate(student.birth)}
                        td
                            a(href=`/delete?id=${student.id}` class="btn btn-danger btn-sm d-flex align-items-center justify-content-center")
                                | Delete
                                svg(width="16" height="16" fill="currentColor" class="bi bi-trash-fill ms-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16")
                                    path(d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0")
